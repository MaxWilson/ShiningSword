{
    "private": true,
    "scripts": {
        "prestart": "dotnet tool restore",
        "start": "dotnet fable watch src/ShiningSword --sourceMaps --run vite",
        "prebuild": "dotnet tool restore",
        "build": "dotnet fable src/ShiningSword --sourceMaps --run vite build",
        "test:live": "dotnet fable watch tests --run webpack-dev-server --config ./webpack.tests.js",
        "build:test": "dotnet fable tests && webpack --config webpack.tests.js",
        "pretest": "dotnet tool restore",
        "test": "dotnet fable tests --outDir dist/tests && mocha dist/tests -r esm",
        "serve": "vite serve"
    },
    "dependencies": {
        "date-fns": "^2.16.1",
        "vite": "^2.9.15"
    },
    "devDependencies": {
        "core-js": "^3.8.2",
        "esm": "^3.2.25",
        "graceful-fs": "^4.2.4",
        "mocha": "^8.2.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-drag-drop-container": "^6.1.1",
        "react-konva": "^18.2.4",
        "react-refresh": "^0.9.0",
        "sass": "^1.58.0",
        "terser": "^4.8.1"
    }
}
